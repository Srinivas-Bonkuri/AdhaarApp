<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fcm.net.adhaarapplication.MainActivity">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="34dp"
        android:id="@+id/imageview"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Capture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnStartCapture"
        android:layout_below="@+id/imageview"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="ForceCapture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnForceCapture"
        android:layout_below="@+id/btnStartCapture"
        android:layout_alignStart="@+id/btnStartCapture"
        android:layout_marginTop="18dp" />

    <TextView
        android:text="NFIQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnForceCapture"
        android:layout_toStartOf="@+id/imageview"
        android:layout_marginTop="32dp"
        android:textSize="19sp"
        android:id="@+id/nftv" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nftv"
        android:layout_toEndOf="@+id/nftv"
        android:layout_marginStart="31dp"
        android:textSize="19sp"
        android:id="@+id/NFIQTextView" />

    <TextView
        android:text="ImageQuality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nftv"
        android:layout_alignStart="@+id/nftv"
        android:layout_marginTop="20dp"
        android:textSize="19sp"
        android:id="@+id/textView3" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginStart="20dp"
        android:textSize="19sp"
        android:id="@+id/ImageQualityTextView" />
</RelativeLayout>
